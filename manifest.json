{
  "manifest_version": 3,
  "name": "QA sidePanel",
  "version": "1.0.0",
  "description": "保存并管理您的代码片段、SQL语句和文本内容",
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "identity",
    "contextMenus",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*.supabase.co/*",
    "https://*.googleapis.com/*",
    "https://accounts.google.com/*",
    "https://*.chromiumapp.org/*",
    "https://github.com/*",
    "https://*.github.com/*"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "QA SidePanel"
  },
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.ts"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "insert-snippet": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "插入片段到当前页面"
    },
    "save-selection": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Command+Shift+D"
      },
      "description": "保存选中文本为片段"
    }
  }
}
